        rel="stylesheet">

</head>

<body>
    <div class="app">
        {{> header}}

        <div class="container">

            <div class=" main">

                <form class="cd-form frames" action='/auth/signin' method="POST" id="signin">
                    <h1 class="center">Đăng nhập tài khoản</h1>

                    <div class="form-group">
                        <div class="form-line form-line-1 ">
                            <i class="far fa-user"></i>
                            <input name="username" id="username" type="text" placeholder="Tên đăng nhập"
                                class="form-input">
                        </div>
                        <span class="form-message"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-line">

                            <i class="fas fa-key"></i>
                            <input class="form-input" id="password" type="password" name="password"
                                placeholder="Mật khẩu">
                            <div id="eye">
                                <i class="far fa-eye" onclick="myFunction('password')"></i>
                            </div>
                        </div>
                        <span class="form-message"></span>
                    </div>
                    <p><a href="./signup.html" class="forget-signup">Quên mật khẩu?</a></p>

                    <input class="form-submit frames" type="submit" value="Đăng nhập">
                    <p class="not-member" style="text-align: center;">Not a member? <a href="./signup" class="signup-in-signin">Register</a></p>
                </form>
            </div>
        </div>
        {{> footer}}
    </div>
    <script src="/js/auth.js"></script>
    <script>
        validator({
            form: '#signin',
            errorSelector: '.form-message',
            rules: [
                validator.isRequired('#username'),
                validator.isAccount('#username'),

                validator.isRequired('#password'),
                validator.isPassword('#password'),

            ],
            onSubmit: function (data) {
                console.log(data)
                // backend xử lý
                let xhr = new XMLHttpRequest();
                let url = "./signin";
                // open a connection
                xhr.open("POST", url, true);
                // Set the request header i.e. which type of content you are sending
                xhr.setRequestHeader("Content-Type", "application/json");
                // Create a state change callback
                xhr.onreadystatechange = function () {
                    if (xhr.readyState === 4 && xhr.status === 200) {

                        // Print received data from server
                        result.innerHTML = this.responseText;
                    }
                };
                // Sending data with the request
                xhr.send(data);
                //window.location.assign('http://localhost:5000/')

                xhr.addEventListener('load', function () {
                    received_data = JSON.parse(xhr.responseText);
                    console.log(received_data)
                    //  window.location.assign('http://localhost:5000/')
                    if (received_data.username === undefined) {
                        var formElement = document.querySelector('#signin');
                        console.log(formElement)
                        var inputElement = formElement.querySelector(".form-message");
                        console.log(inputElement)

                        var errorElement =
                            inputElement.parentElement.parentElement.querySelector(".form-message");
                        inputElement.innerText = received_data["error"];
                        inputElement.parentElement.classList.remove("valid");
                        inputElement.parentElement.classList.add("invalid");
                    }
                    else {
                        alert('Đăng Nhập thành công')
                        window.location.assign('http://localhost:5000/')
                    }

                })
            }
        })
    </script>

</body>

</html>