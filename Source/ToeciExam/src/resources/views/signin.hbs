<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--link enter -->

    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css">
    <link rel="stylesheet" href="/css/auth.css">

</head>

<body>
    <div class="app">
        {{> header}}

        <div class="container">

            <div class=" main">

                <form class="cd-form frames" action='/auth/signin' method="POST" id="signin">
                    <h1 class="center">Đăng nhập tài khoản</h1>

                    <div class="form-group">
                        <div class="form-line ">
                            <i class="far fa-user"></i>
                            <input name="username" id="username" type="text" placeholder="Tên đăng nhập"
                                class="form-input">
                        </div>
                        <span class="form-message"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-line">

                            <i class="fas fa-key"></i>
                            <input class="form-input" id="password" type="password" name="password"
                                placeholder="Mật khẩu">
                            <div id="eye">
                                <i class="far fa-eye" onclick="myFunction('password')"></i>
                            </div>
                        </div>
                        <span class="form-message"></span>
                    </div>
                    <p><a href="./signup.html">Quên mật khẩu?</a></p>

                    <input class="form-submit frames" type="submit" value="Đăng nhập">
                    <p style="text-align: center;">Not a member? <a href="./signup">Register</a></p>
                </form>
            </div>
        </div>
        {{> footer}}
    </div>
    <script src="/js/auth.js"></script>
    <script>
        validator({
            form: '#signin',
            errorSelector: '.form-message',
            rules: [
                validator.isRequired('#username'),
                validator.isRequired('#password'),
            ],
            onSubmit: function (data) {
                console.log(data)
                // backend xử lý
            }
        })
    </script>

</body>

</html>